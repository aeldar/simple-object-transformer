{
  "parser": "babel-eslint",
  "extends": "airbnb-base",
  "plugins": [
    "import",
    "mocha",
    "chai-friendly"
  ],
  "env": {
    "mocha": true
  },
  "rules": {
    "import/no-extraneous-dependencies": ["error", { "devDependencies": ["**/*.test.js", "**/*.spec.js"] }],

    "no-unused-expressions": 0,
    "chai-friendly/no-unused-expressions": 2
  }
}